generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://adi:Ranfoil@9@localHost:5432/ourfinals_local"
}

model Faculty {
  id   String @id @unique @default(uuid())
  name String
}

model User {
  id       String  @id
  name     String
  year     Int
  faculty  String
  nusnetId String
  // telegram String?

  tutor   Tutor?
  student Student?
}

model Student {
  userId String @id @unique
  user   User   @relation(fields: [userId], references: [id])

  // A student can have many assignments
  assignments Assignment[]

  // A student learns many modules
  // modules Module[]
}

model Tutor {
  user   User   @relation(fields: [userId], references: [id])
  userId String @id @unique

  // A tutor can have many assignments
  assignments Assignment[]

  // A tutor teaches many modules
  // modules Module[]
}

model Module {
  code  String @id
  title String

  // Tutors who teach this module
  // tutors Tutor[]

  // Students who learn the module
  // students Student[]

  assignments Assignment[]
}

model Assignment {
  id String @id @default(uuid())

  // Each Assignment linked to one tutor
  tutor   Tutor  @relation(fields: [tutorId], references: [userId])
  tutorId String
  tutorName String // change this to a relation
  tutorNusId String // change this to a relation

  // Each Assignment linked to one student
  student   Student @relation(fields: [studentId], references: [userId])
  studentId String
  studentName String // change this to a relation
  studentNusId String // change this to a relation

  // Each assignment is linked to one module
  module     Module @relation(fields: [moduleCode], references: [code])
  moduleCode String

  assignmentTitle String
  assignmentDescription String

  // Meeting URL to be settled over chat
}
